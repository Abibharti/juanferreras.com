extends layout

block title
  title #{ __("Juan Ferreras - Designer & Developer from Argentina | Resume") }

block body
  body.resume(itemscope='', itemtype='http://schema.org/Person')
    header.resume__header
      .resume__container
        .resume__title
          h1(itemprop='name') 
            | Juan 
            span Ferreras
          h3(itemprop='jobTitle')
            | #{ __("Designer") } 
            span.amp &
            |  #{ __("Front-End Developer") }
        .resume__details
          ul
            li(itemprop='birthDate') #{ __("29th of April, 1995") }
            li(itemprop='address', itemscope='', itemtype='http://schema.org/PostalAddress')
              span(itemprop='addressLocality') Santa Fe
              | , 
              span(itemprop='addressCountry') Argentina
            li(itemprop='url') 
              a.underline(href="/") juanferreras.com
            li(itemprop='email') 
              a.underline(href="mailto:juan@flioh.com") juan@flioh.com
    .resume__container
      .resume-section
        h2.resume-section__title #{ __("About me") }
        .resume__row
          .resume-profile__picture
            img(src='img/profile-min.jpg', alt='Profile Picture', title='Profile Picture')
          .resume-section__container
            p
              | #{ __("I'm a 20 years old Information Systems Engineer student from Santa Fe, Argentina. I find myself constantly learning about the latest trends and best practices in both, software development and design. In fact, I believe it is impossible to talk about our profession without highlighting the importance of good design throughout every portion of software that we craft.") }
            p
              q #{ __("If it's not breaking you down, it's not building you up.") }
              |  #{ __("I'm incredibly passionate about what I do, and I feel really excited towards pushing myself to the edge. I think that we grow and develop ourselves as professionals when we are outside our comfort zone.") }
      .resume-section
        h2.resume-section__title #{ __("Experience") }
        .resume__row
          .resume-section__times
            h5 #{ __("2013 - PRESENT") }
          .resume-section__container
            h3.resume-section__subtitle(itemprop='jobTitle') Chief Executive Officer
            h4(itemprop='brand') Flioh!
            p.resume-section__description
              | #{ __("Founder and Technical Lead of an argentinian-based small design studio specialized in delivering carefully-crafted digital goods to clients from Canada, England and United  States.") }
      .resume-section
        h2.resume-section__title #{ __("Education") }
        .resume__row
          .resume-section__times
            h5 2013 - 2018
          .resume-section__container
            h3.resume-section__subtitle(itemprop='jobTitle') #{ __("Information Systems Engineering") }
            h4(itemprop='alumniOf') UTN FRSF
            p.resume-section__description
              | #{ __("AVG with/without postponements: 8.18/8.18*") }
            p.resume-section__note
              | #{ __("(*)Scale: since in the Ratings System of Universidad Tecnológica Nacional 4 points represent 60/100, an 8.18 average is equivalent to a qualification of 91/100.") }
        .resume__row
          .resume-section__times
            h5 2008 - 2012
          .resume-section__container
            h3.resume-section__subtitle(itemprop='jobTitle')
              | #{ __("Bachelor ") }
              span.amp #{ __("of") } 
              | #{ __("Biology") }
            h4 La Salle Jobson
            p.resume-section__description
              | #{ __("AVG: 8.47 / 10") }
    //
      section.container
        h2 #{ __("Certifications") }
        .row
          .col-3
            h5 2015-08-19
          .col-9
            h3
              a(href='https://verify.edx.org/cert/08a414bf9e504a42979db637faf4a56e')
                | uINOV8x - User Innovation: A Path To Entrepreneurship
            h4 MIT - Massachusetts Institute of Technology
            p
              | #{ __("Score: 92/100.") }
        .row
          .col-3
            h5 2015-08-09
          .col-9
            h3
              | EFSET PLUS 75 Proficient (CEFR C2)
            h4 EF Education First
            p
              | #{ __("Score: 75/100 - Equivalent to CEFR C2: Proficient.") }
        .row
          .col-3
            h5 2015-08-01
          .col-9
            h3
              a(href='https://verify.edx.org/cert/887f1921fabd4494afb682ff89affc5c')
                | TPM1x - Creative Problem Solving and Decision Making
            h4 TU Delft
            p
              | #{ __("Score: 100/100.") }
        .row
          .col-3
            h5 2015-07-27
          .col-9
            h3
              a(href='https://verify.edx.org/cert/9d5970d71af44afbb1fdac56516b596a')
                | HTML5.1x -  Web Design Fundamentals
            h4 W3C
            p
              | #{ __("Score: 99/100.") }
        .row
          .col-3
            h5 2015-07-24
          .col-9
            h3
              a(href='https://certs.duolingo.com/jrxmc4yk')
                | English Proficiency Exam
            h4 Duolingo
            p
              | #{ __("Score: 9.8/10.") }
        .row
          .col-3
            h5 2015-05-20
          .col-9
            h3
              a(href='https://verify.edx.org/cert/4becacd7c9794a90b7a6168de09411ed')
                | DEV203x - Bootstrap
            h4 Microsoft
            p
              | #{ __("Score: 98/100.") }
      section.container
        h2
          | #{ __("Honour") } 
          span.amp & 
          | #{ __("Awards") }
        .row
          .col-3
            h5 2006 - 2007
          .col-9
            h3 #{ __("Provintial Representative") }
            h4 Olimpíadas Matemáticas Argentina
        .row
          .col-3
            h5 2006
          .col-9
            h3 #{ __("National Representative") }
            h4 Olimpíadas Matemáticas Rioplatense
      section.container
        h2
          | #{ __("Skills") } 
          span.amp & 
          | #{ __("Knowledge") }
        .row
          .col-3
            h3 Front-End
          .col-9
            ul
              li HTML5
              li CSS3
              li Javascript
              li jQuery
              li SASS
              li AngularJS
              li Bootstrap/Foundation
              li Responsive Design
              li Jade
              li Grunt/Gulp
              li Ionic
        .row
          .col-3
            h3 #{ __("Design") }
          .col-9
            ul
              li Photoshop
              li Illustrator
              li After Effects
        .row
          .col-3
            h3 #{ __("Other") }
          .col-9
            ul
              li Project Management
              li Java
              li NodeJS
              li Express
              li MongoDB
              li SQL
              li Git
              li Scrum
      section.container.padding-bottom
        h2 #{ __("Languages") }
        .row
          .col-3
            h3 #{ __("Spanish") }
          .col-9
            p #{ __("Native Language") }
        .row
          .col-3
            h3 #{ __("English") }
          .col-9
            p #{ __("Full Professional Proficiency") }
